{
  "name": "begin-build",
  "main": "index.js",
  "version": "0.2.0",
  "engines": {
    "node": ">=8.9"
  },
  "description": "Build tools for Beg.in",
  "homepage": "https://github.com/Beg-in/build#readme",
  "repository": "Beg-in/build",
  "bugs": {
    "url": "https://github.com/Beg-in/build/issues"
  },
  "author": {
    "name": "Beg.in",
    "email": "info@beg.in",
    "url": "http://beg.in"
  },
  "contributors": [
    "Brian Jesse <brian.jesse@gmail.com> (brianjesse.com)"
  ],
  "license": "MIT",
  "scripts": {
    "b": "CONTEXT=${CONTEXT:=$(pwd)} npm run",
    "// REFERENCE SCRIPT b": "CONTEXT=$(pwd) npm explore begin-build -- npm run",
    "pwd": "pwd; cd $CONTEXT; pwd",
    "postgres": "postgres",
    "redis": "redis-server",
    "client": "webpack-dev-server -d --host ${IP:=0.0.0.0} --config webpack.config.js --env.stage=local --env.port=${PORT:=8080} --env.context=$CONTEXT --progress $(if [ $C9_HOSTNAME ]; then echo \"--public $C9_HOSTNAME --env.url=https://$C9_HOSTNAME\"; fi)",
    "watch:client": "nodemon --watch $CONTEXT/yarn.lock --watch webpack.config.js --exec 'npm run client'",
    "watch:server": "STAGE=local PORT=$((${PORT:-8080}+1)) nodemon --exec 'node --inspect $CONTEXT/index.js' --watch $CONTEXT/properties.json --watch $CONTEXT/yarn.lock --watch $(if [ -d \"$CONTEXT/src/server\" ]; then echo \"$CONTEXT/src/server\"; else echo \"$CONTEXT/src\"; fi)",
    "start:client": "node begin.js; cd $CONTEXT; nf run npm run b watch:client",
    "start:server": "node begin.js; cd $CONTEXT; nf run npm run b watch:server",
    "start:services": "run-p postgres redis start:server",
    "start:all": "run-p postgres redis watch:client watch:server",
    "start": "node begin.js; cd $CONTEXT; nf run npm run b start:all",
    "begin": "run-p test watch:nsp",
    "nsp": "cd $CONTEXT; nsp check; exit 0",
    "watch:nsp": "nodemon --exec 'npm run nsp' --watch $CONTEXT/yarn.lock",
    "// ========== DEPLOYMENT ==========": "",
    "build": "(rm -rf $CONTEXT/www || true); webpack --config webpack.config.js --env.context=$CONTEXT --display-error-details",
    "build:dev": "npm run build -- --env.stage=dev",
    "build:prd": "npm run build -- --env.stage=production",
    "server": "cd $CONTEXT; pm2 start index.js --name BEGIN_SERVER && pm2 logs",
    "// ========== PROJECT ===========": "",
    "project": "cd $CONTEXT; npm explore begin-project -- npm run",
    "lint": "npm run project lint",
    "lint:pug": "npm run project lint:pug",
    "test": "npm run project test:watch",
    "patch": "npm run project patch",
    "minor": "npm run project minor",
    "major": "npm run project major",
    "version:push": "npm run project version:push",
    "cz": "cz"
  },
  "dependencies": {
    "autoprefixer": "^7.1.6",
    "autoprefixer-loader": "3.2.0",
    "ava": "^0.23.0",
    "axios": "^0.17.0",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "^1.6.1",
    "begin-project": "0.2.0",
    "begin-util": "1.0.0",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "foreman": "2.0.0",
    "frow": "2.0.1",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "2.30.1",
    "image-webpack-loader": "3.4.2",
    "imagemin": "5.3.1",
    "imagemin-optipng": "5.2.1",
    "imagemin-pngquant": "5.0.1",
    "javascripthon-loader": "0.1.0",
    "jsdoc-babel": "0.3.0",
    "json-loader": "0.5.7",
    "node-sass": "^4.6.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "4.1.1",
    "nsp": "3.1.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss-loader": "^2.0.8",
    "pug": "^2.0.0-rc.2",
    "pug-html-loader": "1.1.5",
    "regenerator-runtime": "0.11.0",
    "resource-hints-webpack-plugin": "0.0.1",
    "sass-loader": "6.0.6",
    "style-loader": "0.18.2",
    "url-loader": "^0.6.2",
    "vue": "^2.5.3",
    "vue-loader": "^13.4.0",
    "vue-router": "3.0.1",
    "vue-svg-loader": "0.3.0",
    "vue-template-compiler": "2.5.3",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "// HACK: postcss-loader must have config": "",
  "postcss": {},
  "devDependencies": {
    "debug-loader": "0.0.1"
  }
}
