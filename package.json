{
  "name": "begin-build",
  "main": "index.js",
  "version": "0.15.0",
  "engines": {
    "node": ">=8.9"
  },
  "description": "Build tools for Beg.in",
  "homepage": "https://github.com/Beg-in/build#readme",
  "repository": "Beg-in/build",
  "bugs": {
    "url": "https://github.com/Beg-in/build/issues"
  },
  "author": {
    "name": "Beg.in",
    "email": "info@beg.in",
    "url": "http://beg.in"
  },
  "contributors": [
    "Brian Jesse <brian.jesse@gmail.com> (brianjesse.com)"
  ],
  "license": "MIT",
  "scripts": {
    "b": "CONTEXT=${CONTEXT:=$(pwd)} npm run",
    "// REFERENCE SCRIPT b": "CONTEXT=$(pwd) npm explore begin-build -- npm run",
    "postgres": "postgres",
    "redis": "redis-server",
    "dev:client": "webpack-dev-server -d --host ${IP:=0.0.0.0} --config webpack.config.js --env.stage=development --env.port=${PORT:=8080} --env.context=$CONTEXT --progress $(if [ $C9_HOSTNAME ]; then echo \"--public $C9_HOSTNAME --env.url=https://$C9_HOSTNAME\"; fi)",
    "dev:server": "cd $CONTEXT; STAGE=development PORT=$((${PORT:-8080}+1)) node --inspect index.js",
    "watcher": "cd $CONTEXT; nodemon --watch yarn.lock --watch properties.js --watch .env",
    "watch:client": "npm run watcher -- --exec 'nf run npm run b dev:client'",
    "watch:server": "npm run watcher -- --exec 'nf run npm run b dev:server' --watch $(if [ -d \"src/server\" ]; then echo \"src/server\"; else echo \"src\"; fi)",
    "services": "run-p postgres redis",
    "start:client": "node begin.js; npm run watch:client",
    "start:server": "node begin.js; run-p services watch:server",
    "start": "node begin.js; run-p services watch:*",
    "// ========== DEPLOYMENT ==========": "",
    "build": "(rm -rf $CONTEXT/dist || true); webpack --config webpack.config.js --env.context=$CONTEXT --env.stage=${STAGE:=production} --display-error-details",
    "server": "cd $CONTEXT; pm2 start index.js --name BEGIN_SERVER && pm2 logs",
    "// ========== PROJECT ===========": "",
    "project": "cd $CONTEXT; npm explore begin-project -- npm run",
    "lint": "npm run project lint",
    "lint:pug": "npm run project lint:pug",
    "test": "npm run project test:watch",
    "patch": "npm run project patch",
    "minor": "npm run project minor",
    "major": "npm run project major",
    "version:push": "npm run project version:push",
    "cz": "cz"
  },
  "dependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-transform-runtime": "^7.0.0-rc",
    "@babel/preset-env": "^7.0.0-rc",
    "@babel/runtime": "^7.0.0-rc",
    "axios": "^0.18.0",
    "babel-loader": "^8.0.2",
    "begin-project": "^0.4.0",
    "begin-util": "^1.5.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.0",
    "file-loader": "^2.0.0",
    "foreman": "^3.0.1",
    "frow": "^3.0.4",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.3.1",
    "imagemin": "^6.0.0",
    "imagemin-optipng": "^5.2.1",
    "imagemin-pngquant": "^6.0.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "vue": "^2.5.17",
    "vue-loader": "^15.4.1",
    "vue-router": "^3.0.1",
    "vue-style-loader": "^4.1.2",
    "vue-svg-loader": "^0.9.0",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-pwa-manifest": "^3.7.1",
    "workbox-webpack-plugin": "^3.4.1"
  }
}
